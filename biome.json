{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "files": {
    "ignore": ["dist", "node_modules", "docs/.vitepress/dist", "docs/.vitepress/cache"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "crlf",
    "lineWidth": 120
  },
  "json": {
    "formatter": {
      "enabled": true
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "useEnumInitializers": "off"
      },
      "suspicious": {
        "noAssignInExpressions": "off",
        "noThenProperty": "off"
      }
    }
  },
  "organizeImports": {
    "enabled": true
  }
}
